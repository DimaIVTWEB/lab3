<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="io.jfxdevelop.lab3_2.HelloController"
      alignment="TOP_CENTER" spacing="10" prefWidth="600" prefHeight="500">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Магазин Товаров" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TitledPane text="Добавить товар">
        <VBox spacing="5">
            <HBox spacing="10">
                <Label text="Название:"/>
                <TextField fx:id="productNameField" promptText="Введите название"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Цена:"/>
                <TextField fx:id="productPriceField" promptText="Введите цену (например, 99.99)"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Количество:"/>
                <TextField fx:id="productQuantityField" promptText="Введите количество"/>
            </HBox>
            <Button text="Добавить товар" onAction="#handleAddProduct"/>
        </VBox>
    </TitledPane>

    <TitledPane text="Управление товарами">
        <VBox spacing="5">
            <HBox spacing="10">
                <Label text="ID товара:"/>
                <TextField fx:id="productIdField" promptText="Введите ID товара"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Кол-во для покупки:"/>
                <TextField fx:id="buyQuantityField" promptText="Введите кол-во"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Купить" onAction="#handleBuyProduct"/>
                <Button text="Удалить" onAction="#handleRemoveProduct"/>
            </HBox>
        </VBox>
    </TitledPane>

    <TitledPane text="Список товаров">
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="productsContainer" spacing="5"/>
        </ScrollPane>
    </TitledPane>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />

</VBox>