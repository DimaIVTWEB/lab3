<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="io.jfxdevelop.lab3_1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <!-- Кнопки управления -->
    <HBox spacing="10">
        <Button text="Выбрать исходный файл" onAction="#onSelectSourceFile"/>
        <Button text="Выбрать целевой файл" onAction="#onSelectTargetFile"/>
    </HBox>

</VBox>